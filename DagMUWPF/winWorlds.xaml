<Window x:Class="DagMUWPF.winWorlds"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="winWorlds" Height="500" Width="400">
	<StackPanel Orientation="Vertical">
		<ListBox ItemsSource="{Binding}">
			<ListBox.ItemContainerStyle>
				<Style TargetType="ListBoxItem">
					<Setter Property="HorizontalContentAlignment" Value="Stretch"/>
				</Style>
			</ListBox.ItemContainerStyle>
		</ListBox>
		<StackPanel.DataContext>
			<XmlDataProvider x:Name="WorldsData" Source="dagmu.xml" XPath="/DagMU/Worlds/World"/>
		</StackPanel.DataContext>
	</StackPanel>
	<Window.Resources>
		<DataTemplate DataType="World">
			<Border BorderThickness="2">
				<StackPanel Orientation="Horizontal">
					<TextBlock FontWeight="Bold">Name:</TextBlock>
					<TextBlock Text="{Binding XPath=@Name}"/>
					<TextBox HorizontalAlignment="Stretch" Text="{Binding XPath=@Muck}" LostFocus="TextBox_LostFocus"/>
				</StackPanel>
			</Border>
		</DataTemplate>
	</Window.Resources>
</Window>
