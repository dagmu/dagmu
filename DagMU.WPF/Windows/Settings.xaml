<src:Helper x:Class="DagMUWPF.Windows.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:src="clr-namespace:DagMUWPF.Windows"
        Title="Settings" Height="300" Width="300">
	<StackPanel>
		<DataGrid Name="gridStuffToMatch"
			ItemsSource="{Binding Path=stuffToMatch}">
			<DataGrid.Columns>
				<DataGridTextColumn Header="String" Width="*" Binding="{Binding str}" />
				<DataGridTextColumn Header="Color"  Width="*" Binding="{Binding str}" />
			</DataGrid.Columns>
		</DataGrid>
	</StackPanel>
</src:Helper>
