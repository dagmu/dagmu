<src:Helper x:Class="DagMUWPF.Windows.Worlds"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:src="clr-namespace:DagMUWPF.Windows"
				xmlns:model="clr-namespace:Model"
        Title="Worlds" Height="500" Width="400">
  <Window.Resources>
    <XmlDataProvider x:Key="worldsXML" Source="dagmu.xml" XPath="/DagMU/Worlds/World"/>
    <HierarchicalDataTemplate DataType="Worlds" ItemsSource="{Binding XPath=./*}">
      <TextBlock Margin="0" Text="Worlds" />
    </HierarchicalDataTemplate>
    <HierarchicalDataTemplate DataType="World" ItemsSource="{Binding XPath=./*}">
      <StackPanel Orientation="Horizontal">
        <TextBlock Text="{Binding XPath=@NameShort}" Foreground="Blue" />
      </StackPanel>
    </HierarchicalDataTemplate>
    <DataTemplate DataType="Connection">
      <StackPanel Orientation="Horizontal">
				<TextBlock Text="SSL: " />
        <TextBlock Text="{Binding XPath=@SSL}" Foreground="Orange" />
      </StackPanel>
    </DataTemplate>
    <DataTemplate DataType="Character">
      <TextBlock Text="{Binding XPath=@Name}" Foreground="Purple" />
    </DataTemplate>
  </Window.Resources>
  <StackPanel Orientation="Horizontal" DataContext="{StaticResource worldsXML}">
    <TreeView Name="trvWorlds" ItemsSource="{Binding}">
      <TreeView.ItemContainerStyle>
        <Style TargetType="{x:Type TreeViewItem}">
          <Setter Property="IsExpanded" Value="True"/>
        </Style>
      </TreeView.ItemContainerStyle>
    </TreeView>
  </StackPanel>
</src:Helper>
